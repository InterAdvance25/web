@model WebProject.ViewModels.RegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registration</title>
    <link asp-href-include="~/css/RegistrationStyles/registrationstyle.css" rel="stylesheet" asp-append-version="true" />
    <script asp-src-include="~/js/FileValidationRegistration.js" asp-append-version="true" defer ></script>
</head>
<body>
    <div class="container">
        <div class="flex-element">
            <form method="post" asp-action="Register" asp-controller="Account" asp-antiforgery="true" >
                <div asp-validation-summary="ModelOnly" style="margin:40px; font-size: 20px;"></div>
                <div class="form-group-flexible">
                    <div class="form-element">
                        <label asp-for="UserName"></label><br />
                        <input asp-for="UserName" class="input-Validation" /><br />
                        <span asp-validation-for="UserName" class="field-Validation"></span>
                    </div>
                    <div class="form-element-2">
                        <label asp-for="SurName"></label><br />
                        <input asp-for="SurName" class="input-Validation" /><br />
                        <span asp-validation-for="SurName" class="field-Validation"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Age"></label><br />
                    <input asp-for="Age" max="120" min="18" value="18" />
                    <span asp-validation-for="Age"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label><br />
                    <input asp-for="Email" class="email-Validation" />
                    <span asp-validation-for="Email" class="field-email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label><br />
                    <input asp-for="Password" class="password-Validation" />
                    <span asp-validation-for="Password" class="password_field-Validation" ></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label><br />
                    <input asp-for="ConfirmPassword" class="confirm_password-Validation"  />
                    <span asp-validation-for="ConfirmPassword" class="confirm_password_field-Validation" ></span>
                </div>
                <div class="form-group-flexible">
                    <div class="form-element">
                        <label asp-for="Country"></label><br />
                        <input asp-for="Country" class="input-Validation" /><br />
                        <span asp-validation-for="Country" class="field-Validation"></span>
                    </div>
                    <div class="form-element-2">
                        <label asp-for="City"></label><br />
                        <input asp-for="City" class="input-Validation" /><br />
                        <span asp-validation-for="City" class="field-Validation"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label><br />
                    <input asp-for="PhoneNumber" class="phone_Number-Validation" />
                    <span asp-validation-for="PhoneNumber" class="field_phone_Number-Validation" ></span>
                </div>
                <div class="form-group-flexible">
                    <div class="form-element">
                        <button type="submit" class="btn-registration">Зарегистрироваться</button>
                    </div>
                    <div class="form-element-2">
                        <a asp-action="Login" asp-controller="Account" class="back_to-Menu">Назад</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

